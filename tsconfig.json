{ 
    "compilerOptions":{ 
       "target":"es2020",
       "moduleResolution":"node",
       "module":"es2020",
       "declaration":true,
       "noLib":false,
       "emitDecoratorMetadata":true,
       "experimentalDecorators":true,
       "pretty":true,
       "allowUnreachableCode":true,
       "allowUnusedLabels":true,
       "noImplicitAny":true,
       "noImplicitReturns":false,
       "noImplicitUseStrict":false,
       "outDir":"./",
       "rootDir": ".",
       "listFiles":false,
       "noEmitHelpers":true
    },
    "include":[ 
       "index.ts",
       "src/*"
    ],
    "exclude":[ 
      //  "node_modules"
    ],
    "compileOnSave":false
 }